{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "lbmt": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "public/js/app",
            "index": "resources/assets/angular/index.html",
            "main": "resources/assets/angular/main.ts",
            "tsConfig": "resources/assets/angular/tsconfig.app.json",
            "polyfills": "resources/assets/angular/polyfills.ts",
            "stylePreprocessorOptions": {
              "includePaths": [
                "resources/assets/angular"
              ]
            },
            "assets": [],
            "styles": [
              "resources/assets/sass/app.scss"
            ],
            "scripts": [
              "node_modules/hammerjs/hammer.min.js"
            ]
          },
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "fileReplacements": [
                {
                  "replace": "resources/assets/angular/environments/environment.ts",
                  "with": "resources/assets/angular/environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "lbmt:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "lbmt:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "lbmt:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "resources/assets/angular/test.ts",
            "karmaConfig": "./karma.conf.js",
            "polyfills": "resources/assets/angular/polyfills.ts",
            "tsConfig": "resources/assets/angular/tsconfig.spec.json",
            "scripts": [
              "node_modules/hammerjs/hammer.min.js"
            ],
            "styles": [
              "resources/assets/sass/app.scss"
            ],
            "assets": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "resources/assets/angular/tsconfig.app.json",
              "resources/assets/angular/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "lbmt-e2e": {
      "root": "",
      "sourceRoot": "",
      "projectType": "application"
    }
  },
  "defaultProject": "lbmt",
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "app",
      "styleext": "scss"
    },
    "@schematics/angular:directive": {
      "prefix": "app"
    }
  }
}